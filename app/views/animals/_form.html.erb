<div class="card">
  <div class="card-body">
    <%= form_with(model: animal) do |form| %>
      <% if animal.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(animal.errors.count, "error") %> prohibited this animal from being saved:</h2>

          <ul>
            <% animal.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name, placeholder: "Enter name" %>
      </div>

      <div class="form-group">
        <%= form.label :age, style: "display: block" %>
        <%= form.number_field :age, placeholder: "Enter age" %>
      </div>

      <div class="form-group">
        <%= form.label :species_id, style: "display: block" %>
        <%= form.text_field :species_id, placeholder: "Enter species ID" %>
      </div>

      <div>
        <%= form.submit "Submit", class:"btn btn-primary my-submit"  %>
      </div>

      <% if animal.persisted? %>
        <div class="cancel-edit">
          <%= button_tag "Cancel editing", class: "btn btn-primary my-action", onclick: "window.location.href='#{animal_path(animal)}'" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>