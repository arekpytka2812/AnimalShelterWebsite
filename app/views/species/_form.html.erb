<% if species.errors.any? %>
  <div class="full-width-centered" style="color: red">
    <h2><%= pluralize(species.errors.count, "error") %> prohibited this species from being saved:</h2>

    <ul>
      <% species.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="card">
  <div class="card-body">
      <%= form_with(model: species) do |form| %>
      

      <div class="form-group">
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name, placeholder: "Enter name" %>
      </div>

      <div class="form-group">
        <%= form.label :description, style: "display: block" %>
        <%= form.text_field :description, placeholder: "Enter description" %>
      </div>

      <div>
        <%= form.submit "Submit", class:"btn btn-primary my-submit"  %>
      </div>

      <% if species.persisted? %>
        <div class="cancel-edit">
          <%= button_tag "Cancel editing", class: "btn btn-primary my-action", onclick: "window.location.href='#{species_path(species)}'" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>